{
  "name": "dts-diff-tool",
  "displayName": "DTS Diff Tool",
  "description": "Compare Device Tree Source files with comment filtering",
  "version": "1.0.0",
  "publisher": "wilu",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:dts"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/wilu-nordic/DTS"
  },
  "keywords": [
    "dts",
    "device-tree",
    "diff",
    "compare",
    "embedded"
  ],
  "contributes": {
    "languages": [
      {
        "id": "dts",
        "aliases": ["Device Tree Source", "DTS"],
        "extensions": [".dts", ".dtsi"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "dtsDiff.compareFiles",
        "title": "DTS: Compare Files",
        "icon": "$(diff)"
      },
      {
        "command": "dtsDiff.compareWithClipboard", 
        "title": "DTS: Compare with Clipboard",
        "icon": "$(clippy)"
      },
      {
        "command": "dtsDiff.stripComments",
        "title": "DTS: Copy formatted file",
        "icon": "$(clippy)"
      },
      {
        "command": "dtsDiff.saveComparison",
        "title": "DTS: Save Comparison Configuration",
        "icon": "$(save)"
      },
      {
        "command": "dtsDiff.loadComparison",
        "title": "DTS: Load Saved Comparison",
        "icon": "$(folder-opened)"
      },
      {
        "command": "dtsDiff.manageComparisons",
        "title": "DTS: Manage Comparison Configurations",
        "icon": "$(settings-gear)"
      },
      {
        "command": "dtsDiff.showComparisonDetails",
        "title": "DTS: Show Active Comparison Details",
        "icon": "$(info)"
      },
      {
        "command": "dtsDiff.configureAdvancedOptions",
        "title": "DTS: Configure Advanced Comparison Options",
        "icon": "$(settings)"
      },
      {
        "command": "dtsDiff.deleteComparison",
        "title": "DTS: Delete Saved Comparison",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "dtsDiff.compareFiles",
          "when": "resourceExtname == .dts || resourceExtname == .dtsi",
          "group": "7_modification"
        },
        {
          "command": "dtsDiff.saveComparison",
          "when": "resourceExtname == .dts || resourceExtname == .dtsi",
          "group": "7_modification"
        },
        {
          "command": "dtsDiff.stripComments",
          "when": "resourceExtname == .dts || resourceExtname == .dtsi",
          "group": "7_modification"
        }
      ],
      "editor/context": [
        {
          "command": "dtsDiff.compareWithClipboard",
          "when": "resourceExtname == .dts || resourceExtname == .dtsi",
          "group": "9_cutcopypaste"
        },
        {
          "command": "dtsDiff.stripComments",
          "when": "resourceExtname == .dts || resourceExtname == .dtsi",
          "group": "1_modification"
        }
      ],
      "commandPalette": [
        {
          "command": "dtsDiff.compareFiles",
          "when": "editorLangId == 'dts'"
        },
        {
          "command": "dtsDiff.compareWithClipboard",
          "when": "editorLangId == 'dts'"
        },
        {
          "command": "dtsDiff.stripComments",
          "when": "editorLangId == 'dts'"
        },
        {
          "command": "dtsDiff.saveComparison"
        },
        {
          "command": "dtsDiff.loadComparison"
        },
        {
          "command": "dtsDiff.manageComparisons"
        },
        {
          "command": "dtsDiff.showComparisonDetails"
        },
        {
          "command": "dtsDiff.configureAdvancedOptions"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0"
  }
}